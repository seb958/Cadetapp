{
  "cli": {
    "version": ">= 5.0.0"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "buildType": "apk"
      }
    },
    "production": {
      "env": {
        "NPM_CONFIG_LEGACY_PEER_DEPS": "true",
        "APP_ENV": "production"
      },
      "android": {
        "buildType": "apk",
        "env": {
          "EXPO_PUBLIC_BACKEND_URL": "$EXPO_PUBLIC_BACKEND_URL"
        }
      },
      "ios": {
        "buildConfiguration": "Release"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
